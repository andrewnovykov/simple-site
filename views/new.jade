doctype
head
	title= page
	meta(charset='utf-8')
	link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css')

body
	.container
		h1= page
		hr
		ul.nav.nav-pills
			each link in links
				li: a(href=link)= link
			li: a(href='/new') new
		hr 
		form(method='post' action='/new')
			fields
				.form-group
					label(for='pageurl') Rage Url
					input#pageurl.form-control(name='pageurl' type = 'text')
				.form-group
					label(for='pagename') Rage Name
					input#pagename.form-control(name='pagename' type = 'text')
				.form-group
					label(for='pagecontent') Rage Content
					input#pagecontent.form-control(name='pagecontent' type = 'text')
				.form-group
					button.btn.btn-primary(type='submit') add
